@{
    ViewData["Title"] = "Chat";
}

@section head{
    <script>

        window.onload = function () {
            setTimeout(function () {
                var chatList = document.getElementById('chat');
                chatList.scrollTop = chatList.scrollHeight;
            }, 100);
        };

    </script>
}

<style>
    #chat-container {
        max-width: 600px;
        margin: auto;
        background-color: #663399;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        padding: 30px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    h1 {
        font-size: 2em;
        color: white;
        margin-bottom: 20px;
    }

    #chat {
        background-color: white;
        border: 2px solid #ccc;
        padding: 15px;
        height: 400px;
        overflow-y: auto;
        margin-top: 20px;
        scroll-behavior: smooth;
    }

        #chat li {
            text-align: left;
            list-style-type: none;
            margin-bottom: 10px;
        }

    input[type="text"],
    input[type="button"] {
        width: calc(100% - 30px);
        padding: 15px;
        margin-bottom: 15px;
        border: none;
        border-radius: 8px;
        outline: none;
        box-sizing: border-box;
    }

    #message {
        width: calc(100% - 30px);
        padding: 12px;
        margin-bottom: 15px;
    }

    #sendmessage {
        width: calc(100% - 30px);
        padding: 15px;
        font-size: 1.2em;
        background-color: #4caf50;
        color: white;
        cursor: pointer;
        border: none;
        margin-left: 0;
    }

        #sendmessage:hover {
            background-color: #45a049;
        }

    .user-count-container {
        position: fixed;
        top: 10px;
        right: 10px;
        background-color: #4caf50;
        color: white;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container" id="chat-container">
    <h1>LiveChat</h1>

    <div class="mt-3">
        <ul id="chat"></ul>
    </div>

    <div class="mt-5">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" onclick="sendMessage()" />
    </div>

</div>

<div id="userCount" class="user-count-container"></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

<script>
    var connection = new signalR.HubConnectionBuilder().withUrl("/chat").build();

    connection.start().then(function () {
        connection.invoke("GetChatHistory").catch(function (err) {
            return console.error(err.toString());
        });
    }).catch(function (err) {
        return console.error(err.toString());
    });

    function sendMessage() {
        var message = document.getElementById("message").value;
        if (message == "") return;

        connection.invoke("SendMessage", "", message).catch(function (err) {
            return console.error(err.toString());
        });

        document.getElementById("message").value = '';

        setTimeout(function () {
            var chatList = document.getElementById('chat');
            chatList.scrollTop = chatList.scrollHeight;
        }, 10);
    }

    connection.on("ReceiveMessage", function (user, message) {
        var encodedMessage = user + ": " + message;
        var li = document.createElement("li");

        li.textContent = encodedMessage;
        document.getElementById("chat").appendChild(li);
    });

    connection.on("LoadChatHistory", function (chatHistory) {
        for (var i = 0; i < chatHistory.length; i++) {
            var user = chatHistory[i].user;
            var message = chatHistory[i].message;
            var encodedMessage = user + ": " + message;
            var li = document.createElement("li");
            li.textContent = encodedMessage;
            document.getElementById("chat").appendChild(li);
        }
    });

    connection.on("ReceiveConnectedUsersCount", function (count) {
        console.log(`Connected users: ${count}`);
        document.getElementById("userCount").innerText = `Connected users: ${count}`;
    });
</script>

